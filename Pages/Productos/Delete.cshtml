@page
@model Papeleria.Pages_Productos.DeleteModel

@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="contenedor-limitado mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-trash-fill me-2"></i> Confirmar eliminación</h5>
                </div>
                <div class="card-body">
                    <p class="mb-4">¿Estás seguro de que deseas eliminar el siguiente producto?</p>

                    <dl class="row small">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Producto.Nombre</dd>

                        <dt class="col-sm-4">Precio</dt>
                        <dd class="col-sm-8">$@Model.Producto.Precio.ToString("N2")</dd>

                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Model.Producto.Stock unidades</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="Producto.Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>