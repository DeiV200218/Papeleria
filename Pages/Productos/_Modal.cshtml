@page
@model Papeleria.Pages.Productos.CreateModel

@{
    Layout = null; // Para que se vea limpio dentro del iframe
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Nuevo producto rápido</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container py-4">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-box-seam me-2"></i> Crear producto</h5>
            </div>
            <div class="card-body">
                <form method="post" class="needs-validation" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Producto.Nombre" class="form-label fw-semibold"></label>
                        <input asp-for="Producto.Nombre" class="form-control" />
                        <span asp-validation-for="Producto.Nombre" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Producto.Precio" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Producto.Precio" class="form-control" />
                        </div>
                        <span asp-validation-for="Producto.Precio" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Producto.Stock" class="form-label fw-semibold"></label>
                        <input asp-for="Producto.Stock" class="form-control" />
                        <span asp-validation-for="Producto.Stock" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Producto.ProveedorId" class="form-label fw-semibold">Proveedor</label>
                        <select asp-for="Producto.ProveedorId" class="form-select" asp-items="Model.Proveedores">
                            <option value="">Seleccione un proveedor</option>
                        </select>
                        <span asp-validation-for="Producto.ProveedorId" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i> Guardar producto
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["ProductoCreado"] != null)
    {
        <script>
            window.parent.postMessage({
                tipo: 'productoCreado',
                nombre: '@TempData["ProductoCreado"]'
            }, '*');
        </script>
    }
</body>
</html>