<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Papelería</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/minimal.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #fefefe;
            color: #333;
        }

        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid #e5e5e5;
        }

            .navbar .nav-link {
                color: #333;
                margin-left: 1rem;
            }

                .navbar .nav-link:hover {
                    color: #0d6efd;
                    text-decoration: underline;
                }

        footer {
            font-size: 0.85rem;
            background-color: transparent;
            color: #666;
            border-top: 1px solid #eee;
        }

            footer a {
                color: #0d6efd;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand fw-semibold text-dark" asp-page="/Index">📝 Papelería</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Inicio</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Ventas/Index">Ventas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Compras/Index">Compras</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Productos/Index">Productos</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/DetalleVentas/Index">Detalle Ventas</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Proveedores/Index">Proveedores</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
<footer class="py-3 mt-auto">
    <div class="container text-center">
        &copy; 2025 - Papelería • <a asp-page="/Privacy">Política de privacidad</a>
    </div>
</footer>
</html>