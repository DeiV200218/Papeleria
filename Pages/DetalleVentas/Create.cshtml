@page
@model Papeleria.Pages_DetalleVentas.CreateModel

@{
    ViewData["Title"] = "Registrar detalle de venta";
}

<div class="contenedor-limitado mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt-cutoff me-2"></i> Nuevo detalle de venta</h5>
                </div>
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="DetalleTransaccion.VentaId" class="form-label fw-semibold">Venta</label>
                            <select asp-for="DetalleTransaccion.VentaId" class="form-select" asp-items="ViewBag.VentaId"></select>
                            <span asp-validation-for="DetalleTransaccion.VentaId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DetalleTransaccion.ProductoId" class="form-label fw-semibold">Producto</label>
                            <select asp-for="DetalleTransaccion.ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                            <span asp-validation-for="DetalleTransaccion.ProductoId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DetalleTransaccion.Cantidad" class="form-label fw-semibold">Cantidad</label>
                            <input asp-for="DetalleTransaccion.Cantidad" class="form-control" />
                            <span asp-validation-for="DetalleTransaccion.Cantidad" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DetalleTransaccion.PrecioUnitario" class="form-label fw-semibold">Precio unitario</label>
                            <input asp-for="DetalleTransaccion.PrecioUnitario" class="form-control" />
                            <span asp-validation-for="DetalleTransaccion.PrecioUnitario" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Guardar detalle
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-end bg-light">
                    <a asp-page="Index" class="btn btn-link">← Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}