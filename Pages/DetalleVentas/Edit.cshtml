@page
@model Papeleria.Pages_DetalleVentas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Detalle venta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DetalleTransaccion.Id" />
            <div class="form-group">
                <label asp-for="DetalleTransaccion.VentaId" class="control-label"></label>
                <select asp-for="DetalleTransaccion.VentaId" class="form-control" asp-items="ViewBag.VentaId"></select>
                <span asp-validation-for="DetalleTransaccion.VentaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalleTransaccion.ProductoId" class="control-label"></label>
                <select asp-for="DetalleTransaccion.ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
                <span asp-validation-for="DetalleTransaccion.ProductoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalleTransaccion.Cantidad" class="control-label"></label>
                <input asp-for="DetalleTransaccion.Cantidad" class="form-control" />
                <span asp-validation-for="DetalleTransaccion.Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio unitario</label>
                <input asp-for="DetalleTransaccion.PrecioUnitario" class="form-control" />
                <span asp-validation-for="DetalleTransaccion.PrecioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
