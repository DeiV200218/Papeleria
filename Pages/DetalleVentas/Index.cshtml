@page
@model Papeleria.Pages_DetalleVentas.IndexModel

@{
    ViewData["Title"] = "Detalle de Ventas";
}

<div class="contenedor-limitado mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-bag-check me-2"></i> Detalles de ventas registrados
            </h6>
            <a asp-page="Create" class="btn btn-sm btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nuevo detalle
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Venta</th>
                        <th>Producto</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-end">Precio Unitario</th>
                        <th class="text-end">Total</th>
                        <th class="text-end" style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DetalleTransaccion)
                    {
                        <tr>
                            <td>#@item.Venta.Id</td>
                            <td>@item.Producto.Nombre</td>
                            <td class="text-center">@item.Cantidad</td>
                            <td class="text-end">@item.PrecioUnitario.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</td>
                            <td class="text-end">@((item.Cantidad * item.PrecioUnitario).ToString("C0", new System.Globalization.CultureInfo("es-CO")))</td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
@*                                 <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-1" title="Detalles">
                                    <i class="bi bi-eye-fill"></i>
                                </a> *@
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
