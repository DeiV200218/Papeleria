@page
@model Papeleria.Pages_Proveedores.IndexModel

@{
    ViewData["Title"] = "Proveedores";
}

<div class="contenedor-limitado mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-white border-bottom d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-person-lines-fill me-2"></i> Lista de proveedores
            </h6>
            <a asp-page="Create" class="btn btn-sm btn-success">
                <i class="bi bi-plus-circle me-1"></i> Nuevo proveedor
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Teléfono</th>
                        <th class="text-end" style="width: 180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var proveedor in Model.Proveedor)
                    {
                        <tr>
                            <td>@proveedor.Nombre</td>
                            <td>@proveedor.Telefono</td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@proveedor.Id" class="btn btn-sm btn-outline-primary me-1" title="Editar">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
@*                                 <a asp-page="Details" asp-route-id="@proveedor.Id" class="btn btn-sm btn-outline-secondary me-1" title="Detalles">
                                    <i class="bi bi-eye-fill"></i>
                                </a> *@
                                <a asp-page="Delete" asp-route-id="@proveedor.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>