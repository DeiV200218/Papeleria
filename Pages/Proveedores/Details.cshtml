@page
@model Papeleria.Pages_Proveedores.DetailsModel

@{
    ViewData["Title"] = "Detalles del proveedor";
}

<div class="contenedor-limitado mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-person-vcard me-2"></i> Detalles del proveedor
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Nombre</dt>
                        <dd class="col-sm-8">@Model.Proveedor.Nombre</dd>

                        <dt class="col-sm-4 text-muted">Teléfono</dt>
                        <dd class="col-sm-8">@Model.Proveedor.Telefono</dd>
                    </dl>
                </div>
                <div class="card-footer text-end bg-light">
                    <a asp-page="Index" class="btn btn-link">← Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>